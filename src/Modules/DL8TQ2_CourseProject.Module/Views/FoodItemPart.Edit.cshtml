@model DL8TQ2_CourseProject.Module.ViewModels.FoodItemPartViewModel

<fieldset class="form-group" asp-validation-class-for="Name">
	<label asp-for="Name">@T["Name"] <span asp-validation-for="Name"></span></label>
	<input asp-for="Name" class="form-control" />
	<span class="hint">@T["Name of menu item"] </span>
</fieldset>

<fieldset class="form-group" asp-validation-class-for="Description">
	<label asp-for="Description">@T["Description"] <span asp-validation-for="Description"></span></label>
	<input asp-for="Description" class="form-control" />
	<span class="hint">@T["Longer description of menu item"] </span>
</fieldset>

<fieldset class="form-group" asp-validation-class-for="Price">
	<label asp-for="Price">@T["Price"] <span asp-validation-for="Price"></span></label>
	<input asp-for="Price" type="number" class="form-control" />
	<span class="hint">@T["Price in Ft."] </span>
</fieldset>

<fieldset class="form-group" asp-validation-class-for="Vegan">
	<label asp-for="Vegan">@T["Vegan"] <span asp-validation-for="Vegan"></span></label>
	<input asp-for="Vegan" type="boolean" class="form-control" />
</fieldset>

<fieldset class="form-group" asp-validation-class-for="GlutenFree">
	<label asp-for="GlutenFree">@T["Gluten Free"] <span asp-validation-for="GlutenFree"></span></label>
	<input asp-for="GlutenFree" type="boolean" class="form-control" />
</fieldset>